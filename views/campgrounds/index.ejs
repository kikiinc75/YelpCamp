<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1>Welcome To YelpCamp</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
    </p>
  </div>
</header>

<div class="row text-center">
  <% campgrounds.forEach(function(campgrounds){ %>
  <div class="col-sm-6 col-md-3">
    <div class="card mb-3">
      <img src="<%= campgrounds.image %>" class="card-img-top" style="height: 300px;" />
      <div class="card-body">
        <h5 class="card-title"><%= campgrounds.name %></h5>
        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More info</a>
      </div>
    </div>
  </div>
  <% }) %>
</div>
<% include ../partials/footer %>